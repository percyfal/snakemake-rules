# -*- snakemake -*-
config_default = {
    'samtools' : {
        'sort' : {
            'options' : '-T /tmp/aln.sorted',
        },
    },
}

update_config(config_default, config)
config = config_default


rule samtools_sort:
    """Run samtools sort"""
    params: options = config['samtools']['sort']['options']
    input: "{prefix}.bam"
    output: "{prefix}.sort.bam"
    shell: "samtools sort {params.options} -o {output} {input}"

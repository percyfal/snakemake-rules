# -*- snakemake -*-
config_default = {
    'samtools' : {
        'index' : {
            'options' : '',
        },
    },
}

update_config(config_default, config)
config = config_default


rule samtools_index:
    """Run samtools index"""
    params: options = config['samtools']['index']['options']
    input: "{prefix}.bam"
    output: "{prefix}.bam.bai"
    shell: "samtools {params.options} index {input}"

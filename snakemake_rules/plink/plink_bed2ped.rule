# -*- snakemake -*-
include: "plink.settings"

rule plink_bed2ped:
    """convert ped file to binary ped. 
    """
    params: cmd = config['plink']['cmd'],
            options = config['plink']['options']
    input: "{prefix}.ped"
    output: "{prefix}.bed"
    shell: "{params.cmd} {params.options}  --file {wildcards.prefix} --make-bed --out {wildcards.prefix}"


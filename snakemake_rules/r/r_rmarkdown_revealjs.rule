# -*- snakemake -*-
include: 'r.settings'

config_default = {
    'r' : {
        'rmarkdown_revealjs' : {
            'cmd' : "Rscript",
            'options' : "",
            },
    },
}

update_config(config_default, config)
config = config_default

rule rmarkdown_revealjs:
    """Create revealjs presentation from Rmarkdown"""
    input: "{prefix}.Rmd"
    output: "{prefix}.html"
    shell: "Rscript -e \"rmarkdown::render('{input}')\"
